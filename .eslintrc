{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"es6": true,
		"jquery": true
	},
	"globals": {
		"messages": true,
		"SquireUI": true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": 0,
		"no-unused-vars": [
			"error",
			{
				"varsIgnorePattern": "(messages|infoContainer|isFriendTyping|incomingMessages|lastMessage|messageContainer)"
			}
		]
	}
}